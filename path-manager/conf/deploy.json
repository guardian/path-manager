{
    "defaultStacks": ["flexible"],
    "packages":{
        "path-manager":{
            "type":"autoscaling",
            "data":{
                "port":9000,
                "bucket":"composer-dist",
                "publicReadAcl": false
            }
        }
    },
    "recipes":{
        "default":{
            "depends" : ["artifactUploadOnly", "deployOnly"]
        },
        "deployOnly":{
            "actionsPerHost": ["path-manager.deploy"]
        },
        "artifactUploadOnly":{
            "actionsBeforeApp": ["path-manager.uploadArtifacts"]
        }
    }
}